// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id              String   @id @default(cuid())
  telegramId      String   @unique
  username        String?
  cryptoCoins     BigInt   @default(0)
  prestigePoints  Int      @default(0)
  lastActive      DateTime @default(now())
  incomeMultiplier Float   @default(1)
  offlineEarnings BigInt   @default(0)
  businesses      Business[]
  upgrades        Upgrade[]
  achievements    Achievement[]
}

model Business {
  id     String @id @default(cuid())
  type   String
  count  Int
  user   User   @relation(fields: [userId], references: [id])
  userId String
}

model Upgrade {
  id     String @id @default(cuid())
  type   String
  user   User   @relation(fields: [userId], references: [id])
  userId String
}

model Achievement {
  id         String   @id @default(cuid())
  type       String
  unlockedAt DateTime @default(now())
  user       User     @relation(fields: [userId], references: [id])
  userId     String
}

model GlobalState {
  id              String   @id @default(cuid())
  blockHeight     Int      @default(0)
  difficulty      Float    @default(1)
  globalHashRate  Float    @default(1000)
  lastBlockTime   DateTime @default(now())
  networkHashRate Float    @default(1000)
  mempool         Int      @default(0)
  coinMarketPrice Float    @default(1)
}